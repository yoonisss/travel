<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="15dp">

<androidx.cardview.widget.CardView
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_width="250dp"
    android:layout_height="250dp"
    app:cardCornerRadius="175dp"
    app:cardElevation="10dp"
    >

    <ImageView
        android:id="@+id/imgTripRecruitTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img01"/>
</androidx.cardview.widget.CardView>

    <TextView
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:id="@+id/tvTripRecruitTeamTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[진해]벚꽃 보러갈 사람 모집 중..." />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTripTeamMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="현재 인원 : " />

        <TextView
            android:id="@+id/tvTripTeamNowMem"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="70dp"
            android:paddingLeft="5dp"
            android:text="50" />


    </LinearLayout>


    <Button
        android:id="@+id/btnTripEnter"
        android:backgroundTint="#619CD6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="참여하기" />
</LinearLayout>