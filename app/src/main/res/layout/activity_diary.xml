<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DiaryFiles.DiaryActivity">

    <LinearLayout
        android:id="@+id/DiaryListOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"

                    >

                </Button>
                <TextView
                    android:id="@+id/calenderView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="년 월 일"
                    android:textSize="17sp">
                </TextView>


                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <RadioButton
                        android:id="@+id/reviewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공개" />
                    <RadioButton
                        android:id="@+id/secretId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비공개" />

                </RadioGroup>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/rsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/btnMyDiary"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#619CD6"
                    android:text="내일기"
                    >
                </Button>

                <Button
                    android:id="@+id/btnReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행리뷰"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#619CD6"
                    >
                </Button>
            </LinearLayout>


            <EditText
                android:id="@+id/titleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/LoginId"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text=""
                >
            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/GalleryImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/avatars">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/contentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="오늘 하루를 기록해요"
                android:inputType="none">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#619CD6"
                android:text="사진첨부" />

            <Button
                android:id="@+id/btnWrite"
                android:backgroundTint="#619CD6"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일기작성" />
        </LinearLayout>
    </LinearLayout>


