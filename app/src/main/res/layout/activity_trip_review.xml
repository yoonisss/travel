<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiaryFiles.TripReviewActivity"
    android:padding="10dp">
<!--제목-->
    <TextView
        android:id="@+id/TripTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Trip Content Id - title?"
        android:textSize="28sp"
        android:textColor="#619cd9"
        android:textStyle="bold"/>
<!--제목 라인 레이아웃-->
    <LinearLayout
        android:padding="5dp"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/TripContentId"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="No.50"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TripDateId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="현재 날짜"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/LoginId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="로그인아이디"
            android:textSize="16sp"/>
    </LinearLayout>
<!--사진 레이아웃-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sea" />
    </LinearLayout>
<!--내용 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="여행 일기"/>
    </LinearLayout>
<!--언더 버튼 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="right">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                   android:adjustViewBounds="true"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pngwing" />

                <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                   android:text="좋아요"/>
           </LinearLayout>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#619CD6"
            android:text="수정" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:backgroundTint="#619CD6"/>
       </LinearLayout>

</LinearLayout>